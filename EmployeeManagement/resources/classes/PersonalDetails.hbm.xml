<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
<class name="com.ideas2it.employee.model.PersonalDetails" table="personal_details">
        <meta attribute = "class-description">
            This class contains the personal details.
        </meta>
        <id name = "personalId" type = "int" column = "personal_id">
            <generator class="assigned"></generator>
        </id>
         <list name = "addressList" cascade ="all">
         <key column = "employee_id"/>
         <list-index column="address_id"/>
         <one-to-many class = "com.ideas2it.employee.model.Address" />
         </list>
        <property name = "name" column = "name" type = "string"/>
        <property name = "emailId" column = "email_id" type = "string"/>
        <property name = "dateOfBirth" column = "dateof_birth" type = "string"/>
        <property name = "phoneNumber" column = "phone_number" type = "string"/>
    </class>
</hibernate-mapping>
